{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "declaration": true,
    "outDir": "dist",
    "rootDir": ".",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,
    "importsNotUsedAsValues": "remove",
    "strict": true
    // baseUrl and paths are removed from here
  },
  "include": [
    "src/**/*"
    // "gen/ts/**/*" is also removed from here
  ]
}