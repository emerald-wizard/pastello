{
  "name": "pastello-workspace",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:web": "pnpm --filter ./apps/web dev",
    "build:web": "pnpm --filter ./apps/web build",
    "test:web": "pnpm --filter ./apps/web test",
    "dev:all": "concurrently -k \"pnpm --filter ./apps/web dev\" \"make -C apps/api dev\"",
    "build:contracts": "pnpm --filter @runecraft-studios/pastello-contracts build",
    "gen:contracts": "buf generate"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "concurrently": "^8.2.2"
  }
}
