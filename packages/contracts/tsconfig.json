{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "declaration": true,
        "strict": true,
        "outDir": "dist",
        "rootDir": "gen/ts", // We only want to compile the generated TS
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "gen/ts/**/*" // Only include the generated files
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}